<% title 'My Profile' %>
<% css 'users/show' %>

<ul class="profile-menu">
  <li><%= link_to "Profile", user_path(@user) %></li>
  <li><%= link_to "Edit", edit_user_path(@user) %></li>
</ul>

<div class="profile-box grey-box-shadow">
  <h3><%= @user.name %> (<%= @user.username %>)</h3>
</div>

<div class="profile-box grey-box-shadow">
  <% if @user.chapter.nil? %>
    <% unless @user.geographic_location.nil? %>
      <%= link_to "Find a chapter in your area.", geo_path(@user.geographic_location.id) %>
    <% else %>
      <%= link_to "Join a chapter", chapters_path %>
    <% end %>
  <% else %>
    <h3><%= @user.chapter.name %></h3>
    <%= @user.geographic_location.self_and_parent_name %>
  <% end %>
</div>
