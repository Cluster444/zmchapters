<% title 'Your Profile' %>
<% css 'users/show' %>

<div class="user-container">
  
  <% if current_user == @user and (@user.alias.blank? or @user.name.blank?) %>
    <%= form_for current_user, :url => registration_path(current_user), :html => {:method => :put} do |f| %>
      <% if @user.name.blank? %>
        <div class="field">
          <%= f.label 'Set your name.' %><br />
          <%= f.text_field :name %>
        </div>
      <% end %>
      <% if @user.alias.blank? %>
        <div class="field">
          <%= f.label 'Set your alias.' %><br />
          <%= f.text_field :alias %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Update Info" %>
      </div>
    <% end %>
  <% end %>

  <div class="user">
    <h2><%= @user.name %></h2>
    <span class="info">
      <%= @user.alias %><br />
      <%= @country.name %>
    </span>
    <%= button_to 'Edit Profile', edit_user_registration_path, :method => :get %>
  </div>

  <div class="chapter">
    <h2><%= @chapter.region %></h2>
    <span class="info">
      <%= @country.name %><br />
      <%= pluralize @chapter.users_count, 'User' %><br />
      Languages: <%= @country.languages %><br />
    </span>
    <p><%= @chapter.description %></p>
  </div>
  <div style="clear:both"></div>

</div>
