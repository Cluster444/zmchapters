<% title 'Chapters Index' %>
<% css 'chapters/index' %>

<div class="chapters-container">
  <div>
    <%= link_to "New Chapter", new_chapter_path %>
    <%= form_tag search_chapters_path, :method => :get do %>
      <div>
        <%= text_field_tag :search_name  %>
        <%= submit_tag "Search" %>
      </div>
    <% end %>
  </div>
  <div>
    <%= render @chapters %>
  </div>
</div>
