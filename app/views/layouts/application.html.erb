<!DOCTYPE html>
<html>
<head>
  <title>TZM - <%= yield(:title) || 'The Zeitgeist Movement' %></title>
  <%= stylesheet_link_tag 'other/reset' %>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'ie' %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
</head>
<body>
  <div id="page">
    <%= render :partial => '/shared/header' %>
    <div id="body" class="container_24">
      <div class="container">
      <% flash.each do |name, message| %>
        <%= content_tag :div, :class => "flash #{name}" do %>
          <span><%= message %></span><span class="close">Close<span>
        <% end %>
      <% end %>
      <%= content_tag :h1, yield(:title), :class => 'page_title' if show_title? %>
      <%= yield %>
      </div>
    </div>
    <%= render :partial => '/shared/footer' %>
    <%= render :partial => '/shared/debug' %>
  </div>
</body>
</html>
