<% title 'Geo:Continent:'+@continent.name %>
<% css 'geographic_territories/show_continent' %>

<div class="geographic-territories-show-continent">
  <%= render :partial => 'breadcrumb', :locals => {:node => @continent} %>
  <h2><%= @continent.name %></h2>
  <h4>Countries with chapters</h4>
  <% @continent.children_with_chapters.each do |country| %>
    <div class="country">
      <%= link_to country.name, geo_path(country) %>
    </div>
  <% end %>
  <h4>Countries without chapters</h4>
  <% @continent.children_without_chapters.each do |country| %>
    <div class="country">
      <%= link_to country.name, geo_path(country) %>
    </div>
  <% end %>
</div>
