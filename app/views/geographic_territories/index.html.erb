<%= title 'Geo:Continents' %>
<%= css 'geographic_territories/index' %>

<div class="geographic-territories-index">
  <ul class="continents">
  <% GeographicTerritory.continents.each do |continent| %>
    <li class="continent">
      <h2><%= continent.name %></h2>
      <ul class="countries">
      <% continent.children.each do |country| %>
        <li class="country">
          <%= link_to country.name, geo_path(country) %>
        </li>
      <% end %>
      </ul>
    </li>
  <% end %>
  </ul>
</div>
