<% if current_user %>
<div id="control-container">
  <% if current_user.admin? %>
    <div class="panel admin">
    <div>
      <ul class="button-bar">
        <li><%= link_to 'Create Member', new_user_path %></li>
        <li><%= link_to 'Create Coordinator', new_coordinator_path %></li>
        <li><%= link_to 'Site Options', site_options_path %></li>
        <li><%= link_to 'View Feedback', feedback_requests_path %></li>
        <%= yield(:admin_control_panel) %>
      </ul>
    </div>
    </div>
  <% end %>
</div>
<% end %>

<div id="nav-container">
  <ul id="nav" class="container_24">
    <span id="control-nav" class="auth">
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <a href="#" class="admin">Manager</a>
        <% end %>
        <%= link_to "Profile", users_path(current_user) %>
        <%= link_to "Sign Out", destroy_user_session_path %>
      <% else %>
        <%= link_to 'Sign In', new_user_session_path %>
        <% if can? :create, User %>
          <%= link_to 'Sign Up', new_user_path %>
        <% end %>
      <% end %>
    </span>
    <li class="first"><%= link_to 'Home', root_path, :class => 'home' %></li>
    <li><%= link_to "Chapters", chapters_path %></li>
    <li class="last"><%= link_to 'Members', users_path %></li>
  </ul>
</div>
