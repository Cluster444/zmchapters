  <%= form_for chapter do |f| %>
    <%= render :partial => '/shared/error_messages', :locals => {:object => chapter} %>
    <div class="field">
      <%= f.label :region %>
      <%= f.text_field :region %>
    </div>
    <div class="field">
      <%= f.label :country %>
      <%= grouped_collection_select(:chapter, :country_id, GeographicTerritory.continents, :children, :name, :id, :name, :prompt => true) %>
    </div>

    <div class="field" id="territory" style="visibility:hidden;">
      <!-- Generated by UI -->
    </div>

    <div class="field" id="subchapter" style="visibility:hidden;">
      <!-- Generated by UI -->
    </div>

    <div class="actions">
      <%= f.submit submit %>
    </div>
  <% end %>
